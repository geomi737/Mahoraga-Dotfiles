# Режим работы
mode=drun# Режим запуска приложений (drun), команд (run), или другой
show_icons=true# Показывать иконки приложений
allow_images=true# Разрешить использование изображений
image_size=40# Размер иконок/картинок в пикселях
# Терминал для запуска терминальных приложений
term=kitty
# Ввод
prompt=Search             # Текст подсказки
insensitive=true          # Игнорировать регистр при поиске
select-first=false        # Автоматически выделять первый элемент
select-entry-on-typing=true # Автовыбор при вводе
no-cursor=false           # Показать курсор ввода
no-actions=false          # Показывать действия (например "Edit", "Run as root")

# Окно
location=center           # Расположение: center, top, bottom, left, right
width=400                 # Ширина окна в px
height=300                # Высота окна в px
padding=10                # Отступы вокруг окна
border-radius=12          # Скругление углов окна
border-size=2             # Толщина рамки окна
border-color=#89b4fa      # Цвет рамки

# Список элементов
listview-spacing=2        # Расстояние между элементами списка
listview-padding=6        # Внутренние отступы элементов
row-height=30             # Высота строки списка
row-border-radius=6       # Скругление строки
row-selected-bg=#89b4fa   # Цвет фона выделенной строки
row-selected-fg=#1e1e2e   # Цвет текста выделенной строки

# Поведение поиска
ignore-case=true           # Игнорировать регистр
fuzzy-match=true           # Включить fuzzy поиск
max-results=20             # Максимальное количество результатов
sort-results=true          # Сортировка результатов по релевантности

# Анимации и визуальные эффекты
animation-duration=150     # Длительность анимации в мс
animation-type=fade        # Тип анимации: fade, slide, scale
shadow-size=8              # Размер тени вокруг окна
shadow-color=rgba(0,0,0,0.5) # Цвет тени

# Интеграция с приложениями
no-run=false               # Запуск выбранной программы
show-terminal=false        # Показывать терминал при запуске команды
terminal-command=kitty     # Команда терминала для запуска

# Прочее
keep-open=false            # Оставлять окно открытым после выбора
history-file=~/.cache/wofi/history.txt  # Файл истории поиска
